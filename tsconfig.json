{
	"compilerOptions": {
		"target": "es2022",
		"module": "commonjs",
		"esModuleInterop": true,
		"noUncheckedIndexedAccess": true,
		"strict": true,
		"isolatedModules": true,
		"noUncheckedSideEffectImports": true,
		"moduleDetection": "force",
		"skipLibCheck": true,
		"outDir": "dist"
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"tests/**/*.ts",
		"seeds/**/*.ts",
		"migrations/**/*.ts",
		"knexfile.ts",
		"jest.config.ts"
	],
	"exclude": ["node_modules"]
}
